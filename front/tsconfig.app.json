{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "jest", 
      "@testing-library/jest-dom",
      "mocha",
      "webdriverio", 
      "@wdio/globals",
      "@wdio/types"
    ],
    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // Вимикає помилки для невикористаних локальних змінних
    "noUnusedParameters": false ,// Вимикає помилки для невикористаних параметрів
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "tests/**/*.ts",
    "wdio.conf.ts",
    "src",
    "__test__",
    "images.d.ts",
    "src/**/*.d.ts"  // Убедись, что .d.ts файлы включены
  ]
}
